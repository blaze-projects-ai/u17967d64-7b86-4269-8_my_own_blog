<%- include('header', { pageTitle: post.title, categories, currentCategory: null }) %>

<article class="post-full">
  <header class="post-header">
    <div class="post-meta">
      <time datetime="<%= post.date %>"><%= new Date(post.date + 'T00:00:00').toLocaleDateString('en-US', { year: 'numeric', month: 'long', day: 'numeric' }) %></time>
      <span class="post-categories">
        <% post.categories.forEach(cat => { %>
          <a href="/category/<%= cat %>" class="category-tag"><%= cat %></a>
        <% }) %>
      </span>
    </div>
    <h1><%= post.title %></h1>
  </header>
  <div class="post-content">
    <%- contentHtml %>
  </div>
  <footer class="post-footer">
    <a href="/">&larr; Back to all posts</a>
  </footer>
</article>

<%- include('footer') %>
